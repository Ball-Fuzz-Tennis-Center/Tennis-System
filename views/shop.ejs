<div class="container">
    <link rel="stylesheet" href="css/shop.css">
    <div class="standard-div">
        <% if (loggedIn) { %>
            <h1><%= currentUser.fullName %></h1>
        <% } else { %>
            <h1>You're not signed in!</h1>
            <a href="/users/signin">Sign in here</a>
        <% } %>

        <% if (loggedIn) { %>
            <legend class="w-auto">Racquet Collection</legend>
            <table class = "table">
                <tbody>
                    <tr>
                        <td> Company name</td>
                        <td>
                            <%= item.companyName %>
                        </td>
                    </tr>
                    <tr>
                        <td> Model</td>
                        <td>
                            <%= item.model %>
                        </td>
                    </tr>
                    <tr>
                        <td>Count</td>
                        <td><%= item.count %> </td>
                    </tr>
                    <tr>
                        <td>Price</td>
                        <td><%= item.price %> </td>
                    </tr> 
                    <tr>
                        <td>Price</td>
                        <td><%= item.price %> </td>
                    </tr>   
                    <tr>
                        <td>Image</td>
                        <td><%= item.image %> </td>
                    </tr> 
                    <tr>
                        <td>itemId</td>
                        <td><%= item.itemId%> </td>
                    </tr>
                    <tr>
                        <button class="btn btn-primary shop-item-button" type="button">Add to Cart</button> 
                    </tr>
                    
                </tbody>
            </table>

            <div class="checkout">
                <header>Cart</header>
                <div class="cart row">
                    <div class="cartItem column">ITEM</span>
                    <div class="cartPrice column">PRICE</span>
                    <div class="cartQuantity column">QUANTITY</span>
                </div>
                <div class="cartItems">
                    <div class="cartRow">
                        <div class="column">
                            <img class="itemImage" src="images/tennis.png">
                            <span class="itemTitle">Wilson</span>
                        </div>
                        <span class="cartPrice column">$19.99</span>
                        <div class="cartQuantity column">
                            <input class="quantityInput" type="number" value="1">
                            <button class="btn btn-danger" type="button">REMOVE</button>
                        </div>
                    </div>
                    <div class="cartRow">
                        <div class="column">
                            <img class="itemImage" src="images/ball.png">
                            <span class="itemTitle">Prince</span>
                        </div>
                        <span class="cartPrice column">$39.99</span>
                        <div class="cartQuantity column">
                            <input class="quantityInput" type="number" value="2">
                            <button class="btn btn-danger" type="button">REMOVE</button>
                        </div>
                    </div>
                </div>
                <div class="cartTotal">
                    <strong class="totalTitle">Total</strong>
                    <span class="totalPrice">$39.97</span>
                </div>


            </div>
        <% } %>
    <script src="/js/shop.js"></script>
</div>