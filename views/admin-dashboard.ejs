<div class= "container">

    <header>
        <a href="/"> BallFuzz.Tennis</a>
    </header>

    <% if (loggedIn) { %>

    <div class ="standard-div">

        <h1>Administrative Dashboard</h1>

        <div class="standard-div div-admin-users">

            <h2 style="color: white;">Users</h2>

            <table class="table table-striped table-admin-users">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Email Address</th>
                        <th>Username</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>

                <% users.forEach(user => { %>
                
                    <tr>
                        <td>
                            <span class="span-admin-users"><%= user.fullName %></span>
                        </td>
                        <td>
                            <span class="span-admin-users"><%= user.email %></span>
                        </td>
                        <td>
                            <span class="span-admin-users"><%= user.username %></span>
                        </td>
                        <td>
                            <a class="link-admin-users" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td>
                    </tr>

                <% }); %>

                </tbody>
            </table>
        </div>

    </div>

    <% } else { %>

    <div class="standard-div">
        <h1>You're not signed in!</h1>
        <a href="/users/signin">Sign in here</a>
    </div>

    <% } %>

</div>