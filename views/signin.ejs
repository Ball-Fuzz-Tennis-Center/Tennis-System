<div>
    <header>
        <a href="/"> BallFuzz.Tennis</a>
    </header>

    <form method = "POST" action ="/signin" class="signin">
        <fieldset class="border">

            <div class="hero-bg">
                <h2 class="w-auto">Sign In</h2>

                <div class="form-group row col-lg">
                    <div class="col-sm-12">
                        <label for="txtusername" class="col-form-label">
                            <span>UserName:</span>

                        </label>
                    </div>
                    <div class="col-sm-12">
                        <input type="text" id="txtusername" name="txtusername" class="form-control" placeholder="UserName " required>
                    </div>
                </div>

                <div class="form-group row col-lg">
                    <div class="col-sm-12">
                        <label for="txtpassword" class="col-form-label">
                            <span>Password:</span>

                        </label>
                    </div>
                    <div class="col-sm-12">
                        <input type="password" id="txtpassword" name="txtpassword" class="form-control" placeholder="Password" required>
                    </div>
                </div>
            </div>

            <div class="bottom form-group row col-lg">
                <div class="col-sm-12">
                    <div class="part1">
                        <input type="checkbox" id="txtremember" name="txtremember">
                        <label for="txtremember"> Remember Me</label>
                    </div>
                    <div class="part1">
                        <a href="https://www.google.com/webhp?tab=rw">Forgot password</a>
                    </div>
                    <div class="part2">
                        <button type="submit" id='btn' class="btn-info btn-block">Log In</button>
                    </div>
                    <div class="part2">

                        <button onclick="document.location='index.html'" class=" btn-primary btn-block ">Cancel</button>

                    </div>


                </div>
            </div>
        </fieldset>

        <img src='images/stock.jpg' alt="tennis pic">
    </form>
</div>