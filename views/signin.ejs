<div>
    <header>
        <a href="/"> BallFuzz.Tennis</a>
    </header>

    <form method = "POST" action ="/signin" class="signin">
        <fieldset class="border">

            <div class="hero-bg">

                <h2 class="w-auto">Sign In</h2>

                <div class="form-group row col-lg">
                    <div class="col-sm-12">
                        <label for="inputEmail" class="col-form-label">
                            <span>Email:</span>

                        </label>
                    </div>
                    <div class="col-sm-12">
                        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email" required>
                    </div>
                </div>

                <div class="form-group row col-lg">
                    <div class="col-sm-12">
                        <label for="inputPassword" class="col-form-label">
                            <span>Password:</span>

                        </label>
                    </div>
                    <div class="col-sm-12">
                        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                    </div>
                </div>
            </div>

            <div class="bottom form-group row col-lg">
                <div class="col-sm-12">
                    <div class="part1">
                        <input type="checkbox" id="txtremember" name="txtremember">
                        <label for="txtremember"> Remember Me</label>
                    </div>
                    <div class="part1">
                        <a href="https://www.google.com/webhp?tab=rw">Forgot password</a>
                    </div>
                    <div class="part2">
                        <button type="submit" id='btn' class="btn-info btn-block">Log In</button>
                    </div>
                    <div class="part2">
                        <button onclick="document.location='index.html'" class=" btn-primary btn-block ">Cancel</button>
                    </div>

                    <a href="signUp" style="color: deepskyblue;">New here? Sign me up!</a>

                </div>
            </div>

        </fieldset>

        <img src='images/stock.jpg' alt="tennis pic">
    </form>
</div>